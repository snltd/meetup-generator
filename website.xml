<?xml version='1.0'?>

<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>

<service_bundle type='manifest' name='snltd:sinatra:meetup-generator'>

<service
  name='application/sinatra/meetup-generator'
	type='service'
	version='1'>

<single_instance />

<property_group name='startd' type='framework'>

   <stability value='Unstable' />

	<propval
		name='duration'
		type='astring'
		value='transient' />

</property_group>

<property_group name='options' type='applications'>

	<propval
		name='rackup'
		type='astring'
    value='/opt/local/bin/rackup' />

	<propval
		name='user'
		type='astring'
    value='sinatra' />

	<propval
		name='dir'
		type='astring'
    value='/www/meetup-generator' />

	<propval
		name='port'
		type='astring'
    value='8002' />

</property_group>

<instance name='default' enabled='true'>

	<!-- Run in multi-user mode -->

	<dependency
		name='multi-user'
		grouping='require_all'
		restart_on='none'
		type='service'>

		<service_fmri value='svc:/milestone/multi-user-server:default' />

	</dependency>

	<exec_method
		name='start'
		type='method'
    timeout_seconds='0'
    exec='%{options/rackup} -D -p %{options/port} %{options/dir}/config.ru'>
    <method_context>
      <method_credential
        user='%{options/user}'
        group='nogroup'
        privileges='basic,!proc_session,!proc_info,!file_link_any'/>
    </method_context>
  </exec_method>

	<exec_method
		name='stop'
		type='method'
		timeout_seconds='10'
    exec='pkill -2 -f "%{options/rackup}.*-p %{options/port}"' />

</instance>

<template>

	<common_name>
		<loctext xml:lang='C'>
      meetup-generator website
		</loctext>
	</common_name>

	<documentation>
    <doc_link name='meetup.rfisher.co.uk' uri='http://meetup.rdfisher.co.uk' />
	</documentation>

</template>

</service>

</service_bundle>
